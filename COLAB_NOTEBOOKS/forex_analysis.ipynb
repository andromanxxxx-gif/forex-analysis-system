# Import libraries
import pandas as pd
import numpy as np
from google.colab import drive
import sys
import os

# Mount Google Drive
drive.mount('/content/drive')

# Clone repository or add path
# !git clone https://github.com/yourusername/forex-analysis-system.git
sys.path.append('/content/forex-analysis-system')

# Import custom modules
from src.data_collection import DataCollector
from src.technical_analysis import TechnicalAnalyzer
from src.news_analyzer import NewsAnalyzer
from src.signal_generator import SignalGenerator
from src.ml_predictor import MLForexPredictor

# Initialize components
data_collector = DataCollector()
technical_analyzer = TechnicalAnalyzer()
news_analyzer = NewsAnalyzer()
signal_generator = SignalGenerator()
ml_predictor = MLForexPredictor()

# Define pairs to analyze
pairs = ['GBPJPY=X', 'CHFJPY=X', 'USDJPY=X', 'EURJPY=X']

# Load trained models
for pair in pairs:
    model_path = f'/content/drive/MyDrive/forex-models/{pair.replace("=", "").lower()}_model.h5'
    scaler_path = f'/content/drive/MyDrive/forex-models/{pair.replace("=", "").lower()}_scaler.joblib'
    
    if os.path.exists(model_path) and os.path.exists(scaler_path):
        ml_predictor.load_model(pair, model_path, scaler_path)
        print(f"Loaded model for {pair}")
    else:
        print(f"Model not found for {pair}")

# Fetch and prepare data
print("Fetching data...")
all_data = data_collector.fetch_all_data(pairs)

print("Performing technical analysis...")
analyzed_data = {}
for pair, data in all_data.items():
    analyzed_data[pair] = technical_analyzer.analyze(data)

# Get news sentiment
print("Analyzing news sentiment...")
news_items = data_collector.scrape_news()
avg_sentiment, analyzed_news = news_analyzer.analyze_sentiment(news_items)

# Generate predictions
print("Generating predictions...")
predictions = {}
for pair, data in analyzed_data.items():
    if pair in ml_predictor.models:
        predictions[pair] = ml_predictor.predict(data, pair)
    else:
        predictions[pair] = None

# Generate signals
print("Generating signals...")
signals = {}
for pair, data in analyzed_data.items():
    signals[pair] = signal_generator.generate_signals(
        data, avg_sentiment, 
        {'values': predictions.get(pair), 'next_close': predictions.get(pair)[0] if predictions.get(pair) is not None else None}
    )

# Save results to Google Drive
results_dir = '/content/drive/MyDrive/forex-analysis-results'
os.makedirs(results_dir, exist_ok=True)

# Save signals
signals_df = pd.DataFrame.from_dict(signals, orient='index')
signals_df.to_csv(f'{results_dir}/signals_{pd.Timestamp.now().strftime("%Y%m%d_%H%M")}.csv')

# Save news analysis
news_df = pd.DataFrame(analyzed_news)
news_df.to_csv(f'{results_dir}/news_{pd.Timestamp.now().strftime("%Y%m%d_%H%M")}.csv')

print("Analysis completed and results saved!")
